# UE5 AI Studio - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_NAME=ue5_ai_studio
DATABASE_USER=ue5admin
DATABASE_PASSWORD=changeme_secure_password_here
DATABASE_HOST=database
DATABASE_PORT=5432

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_PASSWORD=changeme_secure_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ==========================================
# AI PROVIDER API KEYS
# ==========================================
# These can also be configured via the Settings UI
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...
DEEPSEEK_API_KEY=sk-...

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# ==========================================
# PORT CONFIGURATION
# ==========================================
BACKEND_PORT=8000
FRONTEND_PORT=80

# ==========================================
# OPTIONAL: EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ==========================================
# OPTIONAL: S3/STORAGE CONFIGURATION
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=ue5-ai-studio-uploads

# ==========================================
# OPTIONAL: MONITORING
# ==========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ==========================================
# OPTIONAL: ANALYTICS
# ==========================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
